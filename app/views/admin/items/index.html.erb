<div class="container">
  <h3 class="bg-light text-center mt-2">商品一覧</h3>
  <div class="row my-4">
    <div class="col-sm-2 offset-10">
      <%= link_to "+", new_admin_item_path, class: "btn btn-outline-info rounded-circle" %>
    </div>
    <div class="col-sm-10 mx-2 mx-auto px-0 my-2">
       <table class="table table-hover">
        <thead>
        <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
        </tr>
      </thead>
        <tbody>
         <% @items.each do |item| %>
         <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td>
           <% if item.is_active? %>
             <span class="text-success">販売中</span>
           <% else %>
             <span class="text-muted">販売停止中</span>
          <% end %>
         </td>
         </tr>
         <% end %>
        </tbody>
    </div>
  </div>
</div>