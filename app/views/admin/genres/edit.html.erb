<div class="container">
  <h3 class="col-md-4 offset-1 bg-light text-center mt-2">ジャンル編集</h3>

  <div class="row ml-5">
    <div class="col-sm-10 my-5">
      <%= form_with model: @genre, url: admin_genre_path(@genre), local:true do |f| %>
      <%= f.label :"ジャンル名" %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "mx-3" %>
      <%= f.submit "変更を保存", class: "btn btn-info btn-sm my-2" %>
     <% end %>
    </div>
  </div>
</div>
